<div id="header" class="navbar bg-base-100 bg-yellow-400 drop-shadow-md md:drop-shadow-xl">
  <div class="flex-1">
    <a class="btn btn-ghost normal-case text-xl mr-3">League Highlight</a>
  </div>
  <button class="btn btn-ghost btn-circle">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>
    </button>
  <div class="flex-none gap-2">
    <% unless logged_in? %>
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to 'ログイン', login_path, class: 'mr-1' %></li>
        <li><%= link_to '会員登録', signup_path, class: 'mr-1' %></li>
      </ul>
    <% end %>
    <% if logged_in? %>
      <!-- Avatar -->
      <div id="header-avatar-dropdown" class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar">
          <div class="w-10 rounded-full">
            <%= image_tag 'avatar' %>
          </div>
        </label>
        <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
          <li>
            <a class="justify-between">
              Profile
              <span class="badge">New</span>
            </a>
          </li>
          <li><a>Settings</a></li>
          <li>
            <%= link_to 'ログアウト',
                        logout_path,
                        data: { turbo_method: :delete, turbo_confirm: 'ログアウトします' } %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
