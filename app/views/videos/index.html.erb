<div class="p-5">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @videos.each do |video| %>
      <div class="bg-white rounded-md overflow-hidden">
        <div class="p-4 relative" style="padding-bottom: 56.25%;">
          <div class="absolute inset-0  object-cover object-center w-full"><%= image_tag(video.thumbnail_url, alt: video.title, class: 'w-full h-full hover:opacity-75') %></div>
        </div>
        <div class="bg-gray-100 shadow-lg h-24 px-4 rounded-lg">
            <p class="text-gray-800py-2"><%= video.title %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
