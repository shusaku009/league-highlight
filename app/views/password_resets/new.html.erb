<% content_for(:title, 'パスワードリセット申請') %>
<div class="bg-white font-family-karla p-6">
  <div class="w-full flex flex-col">
    <div class="flex flex-col justify-center my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
      <h1 class="text-lg">パスワードリセット申請</h1>
      <div class="flex flex-col justify-center pt-3 md:pt-4">
        <%= form_with url: password_resets_path, method: :post, local: true do |f| %>
          <div class="flex flex-col">
            <%= f.label :email, User.human_attribute_name(:email) %>
            <%= f.text_field :email, class: 'form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' %>
          </div>
          <div class="pt-4">
            <%= f.submit '送信', class: 'btn rounded' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
