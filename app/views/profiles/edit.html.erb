<div class="bg-white font-family-karla p-6">
  <div class="w-full flex flex-col">
    <div class="flex flex-col justify-center my-auto pt-8 md:pt-0 px-8 md:px-24 lg:px-32">
      <h1 class="text-center text-2xl">プロフィール編集</h1>
      <div class="flex flex-col justify-center pt-3 md:pt-8">
        <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
          <div class="flex flex-col pt-4">
            <%= f.label :user_name, class: 'form-label text-lg' %>
            <%= f.text_field :user_name, class: 'form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' %>
          </div>
          <div class="flex flex-col pt-4">
            <%= f.label :email, class: 'form-label text-lg' %>
            <%= f.email_field :email, class: 'form-control shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mt-1 leading-tight focus:outline-none focus:shadow-outline' %>
          </div>
          <div class="pt-4">
            <%= f.file_field :avatar, class: 'file-input file-input-bordered w-full max-w-xs', accept: 'image/*' %>
            <%= f.hidden_field :avatar_cache %>
          </div>
          <div class="pt-4">
            <%= f.submit class: 'btn rounded' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
